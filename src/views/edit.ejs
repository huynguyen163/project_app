<html lang="en">

</html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update-User</title>
    <link rel="stylesheet" href="../css/styles.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create</a>
    </div>
    <%= JSON.stringify(userId) %>

        <form action="/update-user" method="post">
            <div class="form-add-new">
                <fieldset>
                    <legend>Update a user</legend>
                    <!-- d-none là thuộc tính tạo trong css để ẩn trường Id -->
                    <div class="input-group d-none">
                        <label>Id: </label>
                        <input type="text" name="id" value="<%= userId.id %>">
                    </div>

                    <div class="input-group">
                        <label>Email: </label>
                        <input type="text" name="email" value="<%= userId.email %>">
                    </div>

                    <div class="input-group">
                        <label>Name: </label>
                        <input type="text" name="name" value="<%= userId.name %>">
                    </div>

                    <div class="input-group">
                        <label>City: </label>
                        <input type="text" name="city" value="<%= userId.city %>">
                    </div>

                    <div class="button-add-user">
                        <button>Save</button>
                    </div>
                </fieldset>
            </div>
        </form>


</body>

</html>